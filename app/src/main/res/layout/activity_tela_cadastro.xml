<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TelaCadastro"
    android:background="@color/blue">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:src="@drawable/ic_allfishes"
        android:text="LOGIN"
        android:textColor="@color/white"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/Email"
        style="@style/Edit_Text"
        android:layout_marginTop="256dp"
        android:drawableRight="@drawable/ic_email"
        android:hint="E-mail"
        android:inputType="textEmailAddress"
        android:textColor="@color/black"
        android:textColorHint="#BFBFBF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/textTelefone"
        style="@style/Edit_Text2"
        android:layout_marginTop="324dp"
        android:autofillHints="number"
        android:drawableRight="@drawable/ic_phone"
        android:hint="Telefone"
        android:inputType="number"
        android:maxLength="11"
        android:textColor="@color/black"
        android:textColorHint="#BFBFBF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/textSenha"
        style="@style/Edit_Text"
        android:layout_marginTop="396dp"
        android:autofillHints="password"
        android:drawableRight="@drawable/ic_eye_another"
        android:hint="Senha"
        android:inputType="numberPassword"
        android:maxLength="6"
        android:textColor="@color/black"
        android:textColorHint="#BFBFBF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.512"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:longClickable="false"/>

    <EditText
        android:id="@+id/textNome"
        style="@style/Edit_Text"
        android:layout_marginTop="180dp"
        android:drawableRight="@drawable/ic_person3"
        android:hint="Nome completo"
        android:inputType="textPersonName"
        android:textColor="@color/black"
        android:textColorHint="#BFBFBF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnHome"
        style="@style/button2"
        android:layout_marginTop="108dp"
        android:text="Cadastre-se"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textSenha" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnTelaLogin"
        style="@style/button3"
        android:layout_marginTop="12dp"
        android:text="JÃ¡ tem uma conta?"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.808"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textSenha" />

</androidx.constraintlayout.widget.ConstraintLayout>